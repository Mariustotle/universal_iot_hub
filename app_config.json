{
    "Simulator": true,
    "Device": "Raspberry Pi 3",
    "Adapter": "RaspberryOSTrixy",
    "logging": {
        "file_name": "app.log",
        "path": "logs//",
        "level": "info",
        "max_file_size_in_mb": 50,
        "max_number_of_files": 14
    },
    "Sensors" : {
        "DigitalTemperatureSensors" :
        [
            {
                "name": "Server Room Temperature",
                "driver": "dht22",
                "gpio_pin": 12,
                "measurement": "Celsius"
            }
        ],
        "TDSSensors" : 
        [
            {
                "name": "Fish Tank TDS Sensor",
                "analog_digital_converter_name": "ADC (TDS)",
                "adc_channel": 1,
                "number_of_readings": 2,
                "delay_between_readings": 0.1,
                "driver": null               
            }
        ]
    },
    "Actuators" : {
        "RelaySwitches" : 
        [
            {
                "name": "Bedroom Light",
                "driver": "jqc3f_05vdc_c",
                "default_power_status": "Off",
                "gpio_pin": 18,
                "is_low_voltage_trigger": true,
                "use_direction_control": true
            }
        ]
    }
}    